<h1>Mój profil</h1>
<p>Find me in app/views/user/index.html.erb</p>
<div id="profile"
<div class="container">
  <form>
    <div class="row">
      <h4>Konto</h4>
      <div class="input-group input-group-icon">
        <input type="text" placeholder=Imie>
        <div class="input-icon"><i class="fa fa-user"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="text" placeholder=Nazwisko>
        <div class="input-icon"><i class="fa fa-user"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="email" placeholder="Adres Email"/>
        <div class="input-icon"><i class="fa fa-envelope"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="city" placeholder="Miejscowość"/>
        <div class="input-icon"><i class="fa fa-envelope"></i></div>
      </div>
      <div class="input-group input-group-icon">
        <input type="password" placeholder="Hasło"/>
        <div class="input-icon"><i class="fa fa-key"></i></div>
      </div>
    </div>
    <div class="row">
      <div class="col-half">
        <h4>Date of Birth</h4>
        <div class="input-group">
          <div class="col-third">
            <input type="text" placeholder="DD"/>
          </div>
          <div class="col-third">
            <input type="text" placeholder="MM"/>
          </div>
          <div class="col-third">
            <input type="text" placeholder="YYYY"/>
          </div>
        </div>
      </div>
      <div class="col-half">
        <h4>Płeć</h4>
        <div class="input-group">
          <input type="radio" name="gender" value="male" id="gender-male"/>
          <label for="gender-male">Mężczyzna</label>
          <input type="radio" name="gender" value="female" id="gender-female"/>
          <label for="gender-female">Kobieta</label>
        </div>
      </div>
      <div class="col-half">
        <h4>Kogo szukam</h4>
        <div class="input-group">
          <input type="radio" name="gender-search" value="male" id=""/>
          <label for="gender-male">Mężczyzny</label>
          <input type="radio" name="gender-search" value="female" id=""/>
          <label for="gender-female">Kobiety</label>
        </div>
      </div>
      <div class="row">
        <h4>O mnie</h4>
        <div class="input-group">
          <textarea id="self_describe" rows="8" cols="80"></textarea>
        </div>
      </div>
    </div>

    <div class="row">
      <h4>Terms and Conditions</h4>
      <div class="input-group">
        <input type="checkbox" id="terms"/>
        <label for="terms">I accept the terms and conditions for signing up to this service, and hereby confirm I have read the privacy policy.</label>
      </div>
    </div>
  </form>
</div>
</div>

<h1 class="ui left floated header">
  <%=current_user.email%>
</h1>

<% current_user.not_friends.sample(5).each do |user| %>
  <table id="add_to_friend">
    <tr>
      <td>  <%= link_to user.email, user_path(user)%> </td>
      <td>  <%= link_to "Dodaj do znajomych", {controller: 'friendships', action: 'create', method: :post, id: user.id, remote: true}, class: "create" %> </td>
    <tr>
  </table>
<% end %>

<br>
<%= link_to 'Twoi znajomi', friendships_path %>
<%= link_to 'Wysłane zaproszenia', friendships_requested_friends_path %>
<%= link_to 'Zablokowani użytkownicy', users_blocked_users_path %>
