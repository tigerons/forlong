<%= form_for @user, controller: 'users', action: 'update', remote: true do |form| %>

  <div class="field">

    <%= form.text_area :name %>
    <%= form.text_area :surname %>
    <%= form.text_area :date_of_birth %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>

  </div>

<% end %>
