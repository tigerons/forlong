<b> Do akceptacji:</b>
<% if @user.friend_requests? %>
  <br>
  <% @requests.each do |user| %>
    <li> <%= user.email %> <li>
    <%= form_tag ({controller: 'friendships', action: 'accept', method: 'post', id: user.id}) do %>
      <input class="ui basic button" type=submit value='Akceptuj zaproszenie'>
    <% end %>
  <% end %>
<% end %>
